{
  "compilerOptions": {
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "target": "ES2023", 
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true, 
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"] 
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "files": ["src/type.d.ts"],
  "include": ["src/**/*"]
}
